<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/motto_color"
    android:orientation="vertical"
    tools:context=".fragment.InvestmentsFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/segoeui"
        android:padding="8dp"
        android:text="I would like to get the information about:"
        android:textAlignment="center"
        android:textSize="20sp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/dirty_white"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/equisite_primary"
        app:strokeWidth="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/cbRealEstate"
                style="@style/CustomCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Real estate" />

            <CheckBox
                android:id="@+id/cbStocks"
                style="@style/CustomCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stocks" />

            <CheckBox
                android:id="@+id/cbBonds"
                style="@style/CustomCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bonds" />

            <CheckBox
                android:id="@+id/cbInsurance"
                style="@style/CustomCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insurance" />

            <CheckBox
                android:id="@+id/cbCrypto"
                style="@style/CustomCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crypto" />

            <CheckBox
                android:id="@+id/cbMetals"
                style="@style/CustomCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precious metals" />

            <CheckBox
                android:id="@+id/cbFonds"
                style="@style/CustomCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bonds" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <Button
        android:id="@+id/btnSearchInternet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Search the internet" />

</LinearLayout>